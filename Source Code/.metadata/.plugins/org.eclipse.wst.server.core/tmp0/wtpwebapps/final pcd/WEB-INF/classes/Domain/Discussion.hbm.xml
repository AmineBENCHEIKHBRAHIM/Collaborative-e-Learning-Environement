<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Domain">
    <class name="Discussion" table="Discussion" >
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        
        <property name="sender" type="int">
            <column name="sender" length="21" />
        </property>
        <property name="receiver" type="int">
            <column name="receiver" length="21" />
        </property>
        <property name="msg" type="java.lang.String">
            <column name="msg" length="254" />
        </property>
        <property name="date" type="java.lang.String">
            <column name="date" length="254"  />
        </property>
       
    </class>
</hibernate-mapping>
